<?xml version="1.0" encoding="UTF-8"?>
<project>
	<technology>js-lib</technology>
	<package>com.kidscademy.fables</package>
	<author>Iulian Rotaru</author>
	<title>@string/app-name</title>
	<description>@string/app-description</description>
	<naming>DATA_ATTR</naming>
	<manifest>manifest.json</manifest>
	<service-worker>script/ServiceWorker.js</service-worker>
	<favicon>res/asset/favicon.ico</favicon>
	<locale>en</locale>
	
	<media-queries>
		<media-query alias="portrait" expression="orientation: portrait" />
		<media-query alias="lgd" expression="min-width: 1200px" />
		<media-query alias="mdd" expression="max-width: 992px" />
		<media-query alias="smd" expression="max-width: 768px" />
		<media-query alias="xsd" expression="max-width: 560px" />
		<media-query alias="h740" expression="max-height: 740px" />
	</media-queries>

	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=7; IE=EDGE"></meta>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0"></meta>

		<meta property="og:title" content="@string/app-name"></meta>
		<meta property="og:description" content="@string/app-description"></meta>
		<meta property="og:image" content="@image/app-featured"></meta>
		<meta property="og:url" content="http://fables.kids-cademy.com/"></meta>
		<meta name="twitter:card" content="@image/app-featured"></meta>

		<meta name="theme-color" content="white"></meta>
  		<meta name="apple-mobile-web-app-capable" content="yes"></meta>
  		<meta name="apple-mobile-web-app-status-bar-style" content="black"></meta>
  		<meta name="apple-mobile-web-app-title" content="@string/app-name"></meta>
  		<meta name="msapplication-TileImage" content="@image/app-icon-144"></meta>
  		<meta name="msapplication-TileColor" content="#FFFFFF"></meta>

		<link rel="apple-touch-icon" href="@image/app-icon-152"></link>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" type="text/css"></link>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Great+Vibes" type="text/css"></link>

		<script src="script/ServiceLoader.js" type="text/javascript" embedded="true"></script>
		<script src="lib/js-lib/js-lib.js" type="text/javascript" defer="true"></script>
	</head>

	<excludes>data/</excludes>
</project>
